#!/bin/sh

dryrun=0
source ./commands.sh
source ./secrets/common.env
machine=$(hostname)

STATE 'INIT'

# Copy .ssh/
RUN "[ -d "$HOME/.ssh" ] || cp -r secrets/$machine/ssh $HOME/.ssh"

# Copy any custom private config needed for machine
RUN "[ -f secrets/.bashrc.local ] && cp -f secrets/bashrc.local $HOME/.bashrc.local"

# Setup Wifi if not already
RUN "ping -c 1 google.com > /dev/null 2>&1 || sudo iwctl --passphrase=$psk station wlan0 connect $ssid"

