#!/bin/sh

dryrun=0
source ./commands.sh
source ./common/common.env
machine=$(hostname)

STATE 'INIT'

# Copy .ssh/
RUN "[ -d "$HOME/.ssh" ] || cp -R $machine/.ssh $HOME"

# Copy any custom private config needed for machine
RUN "[ -f $machine/.bash.private ] && cp -f $machine/.bash.private $HOME"

# Setup Wifi if not already
RUN "ping -c 1 google.com > /dev/null 2>&1 || sudo iwctl --passphrase=$psk station wlan0 connect $ssid"

